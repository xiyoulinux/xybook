    def ButtonClick(self, event):
        self.grid_1.Destroy()
        self.grid_1 = wx.grid.Grid(self, -1, size=(1, 1))
        self.__do_layout()
        n=self.list_box_1.GetSelection()
        sampleList = [item for item in os.listdir(os.getcwd()) if os.path.splitext(item)[1] in ('.list',)]
        f = open(sampleList[n],'r')
        bo=[os.path.splitext(os.path.basename(line))[0] for line in f]
        f.close()
        self.grid_1.CreateGrid(len(bo),1)
        self.grid_1.SetColLabelValue(0, '名称')
        self.grid_1.SetColSize(0, 300)
        for row in range(len(bo)):
            for col in range(1):
                self.grid_1.SetCellValue(row, col,"%s" % bo[row])





    def search(self, event): # wxGlade: MyFrame.<event_handler>
        path = self.text_ctrl_1.GetValue()
        format = self.text_ctrl_2.GetValue()
        
        print path
        print format
        if path == '' and format == '':
            wx.MessageBox("请输入路径和想要搜索的格式")
        elif  path == '':
            wx.MessageBox("请输入路径")
        elif format == '':
            wx.MessageBox("请输入想要搜索的格式")  
           
        if path != '' and format != '':
 #       	fp = open("list.list",'w')
            search.searcher(path, format) 
  #          fp.close()
        event.Skip()

